<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingHorizontal="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="125dp"
        android:layout_height="85dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgStudy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_f8f8f8" />

            <TextView
                android:id="@+id/txtCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_study_category"
                android:fontFamily="@font/pretendard_regular"
                android:paddingHorizontal="6dp"
                android:paddingVertical="3dp"
                android:textColor="@color/color_fffff"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtStudyTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_medium"
            android:lines="2"
            android:maxLines="2"
            android:textColor="@color/color_444444"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtWay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="2dp"
                android:fontFamily="@font/pretendard_regular"
                android:paddingStart="3dp"
                android:paddingEnd="6dp"
                android:textColor="@color/color_868686"
                android:textSize="12dp"
                app:drawableStartCompat="@drawable/ic_maps_location_fill" />

            <TextView
                android:id="@+id/txtHeadcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:drawablePadding="2dp"
                android:fontFamily="@font/pretendard_regular"
                android:paddingStart="3dp"
                android:paddingEnd="6dp"
                android:textColor="@color/color_868686"
                android:textSize="12dp"
                app:drawableStartCompat="@drawable/ic_etc_people_mini" />

        </LinearLayout>
    </LinearLayout>

    <CheckBox
        android:id="@+id/chkFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        android:button="@drawable/sel_btn_favorite" />
</LinearLayout>