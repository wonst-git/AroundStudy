<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AroundStudy" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_fffff</item>
        <item name="colorPrimaryDark">@color/color_fffff</item>
        <item name="colorAccent">@color/color_95c60b</item>
        <item name="android:colorBackground">@color/color_fffff</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/color_fffff</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <!-- Customize your theme here. -->
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.AroundStudy.Splash" parent="Theme.AroundStudy">
        <item name="android:windowSplashScreenBackground" tools:targetApi="31">@color/color_trans</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="31">@color/color_trans</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="31">0</item>
    </style>

    <style name="Theme.AroundStudy.BottomNavigationView" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">10dp</item>
    </style>
</resources>